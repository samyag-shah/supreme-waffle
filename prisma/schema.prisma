// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String     @default(cuid()) @id
  email       String?  
  phone       String?  
  username    String
  loginMethod Method     @default(Email)
  createdAt   DateTime   @default(now())
}

model Owner {
  id                    String     @default(cuid()) @id
  ownerEmail            String?  
  ownerPhone            String  
  ownerName             String
  createdAt             DateTime   @default(now())
  Boxcrickets           Boxcricket[]
}

model Boxcricket {
  id                    String   @default(cuid()) @id
  boxCricketName        String
  boxCricketState       String
  boxCricketCity        String
  boxCricketArea        String
  boxCricketLandmark    String
  boxCricketAddress     String
  bookingSlots          Json
  boxCricketImages      Json
  minSlotPrice          Int
  maxSlotPrice          Int
  boxCricketFacilities  String
  createdAt             DateTime @default(now())
  owner                 Owner    @relation(fields: [ownerId], references: [id])    
  ownerId               String
}

enum Method {
  Email
  Phone
}

