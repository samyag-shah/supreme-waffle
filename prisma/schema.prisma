// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String     @default(cuid()) @id
  email       String?  
  phone       String?  
  username    String
  bookings    Userbooking[]
  createdAt   DateTime   @default(now())
}

model Owner {
  id                    String     @default(cuid()) @id
  ownerName             String
  ownerPhone            String  
  ownerEmail            String?  
  createdAt             DateTime   @default(now())
  Boxcrickets           Boxcricket[]
}

model Boxcricket {
  id                        String   @default(cuid()) @id
  boxCricketName            String
  boxCricketState           String
  boxCricketCity            String
  boxCricketArea            String
  boxCricketLandmark        String
  boxCricketAddress         String
  boxCricketImages          Json
  boxCricketFreeFacilities  String
  boxCricketPaidFacilities  String
  bookingSlots              Json
  minSlotPrice              Int
  maxSlotPrice              Int
  createdAt                 DateTime @default(now())
  owner                     Owner    @relation(fields: [ownerId], references: [id])    
  ownerId                   String
  bookings                  Booking[]
  userBookings              Userbooking[]
}

model Booking {
  id               String @default(cuid()) @id
  date             String  
  slots            Json  
  boxCricket       Boxcricket   @relation(fields: [boxCricketId], references: [id])
  boxCricketId     String      
  createdAt        DateTime @default(now()) 
}

model Userbooking {
  id           String @default(cuid()) @id
  user         User  @relation(fields: [userId], references: [id])
  userId       String
  booking      Boxcricket @relation(fields: [boxCricketId], references: [id]) 
  boxCricketId String
  userBookings Json 
  date         String
  createdAt    DateTime @default(now())
}